<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<data>
    
    	<record id="sh_sale_order_pricelist_wizard_view" model="ir.ui.view">
			<field name="name">sh_sale_order_pricelist_wizard_view</field>
			<field name="model">sale.order.pricelist.wizard</field>
			<field name="arch" type="xml">
				<form>
				<sheet>
					
					<notebook>
						<page string="Select Pricelist">
							<field name="pricelist_line" readonly="1">
								<tree editable="bottom" create="0" edit="0" delete="0">
									<field name="sh_pricelist_id"/>			
									<!-- <field name="sh_unit_measure"/>
									<field name="sh_unit_price"/>
									<field name="sh_unit_cost"/>
									<field name="sh_margin"/>
									<field name="sh_margin_per"/>

									<field name="as_precio_proveedor"/>
									<field name="as_descuento"/> -->

									<field name="line_id" invisible="1"/>

									<!-- <field name="price_based_usd" optional="hide"/> -->
									<field name="nimax_price_usd" optional="show"/>
									<field name="cost_nimax_usd" optional="show"/>
									<!-- <field name="COST_NIMAX_MXP" optional="hide"/> -->

									<button name="update_sale_line_unit_price" string="Aplicar" type="object"/>
								</tree>	
							</field>
						</page>
					</notebook>
				</sheet>			
			</form>
			</field>
		</record>

		<record id="action_pricelist_wizard" model="ir.actions.act_window">
			<field name="name">Pricelist Wizard</field>
			<field name="res_model">sale.order.pricelist.wizard</field>
			<!-- <field name="view_type">form</field> -->
			<field name="view_id" ref="sh_sale_order_pricelist_wizard_view" />
			<field name="target">new</field>
		</record>
 	</data>

 	<!-- <menuitem id="sh_pricelist_wizard_id" name="Pricelist Wizard" parent="sale.product_menu_catalog"
 		action="action_quick_product_wizard" groups="" sequence="100"/>   -->       
         
 </odoo>	