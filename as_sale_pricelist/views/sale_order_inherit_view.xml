<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Sale Order form view -->
	<record id="view_order_form_inherit_view" model="ir.ui.view">
		<field name="name">view.order.form.inherit.view</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form"/>
		<field name="priority">55</field>
		<field name="arch" type="xml">
			<xpath expr="//notebook//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_total']" position="after">
			  <field name="as_product_comisionable" invisible="1"/>
				<button name="promo_apply" type="object" attrs="{'invisible': [('as_product_comisionable', '!=', False)]}" string="Promo" icon="fa-percent" context="{'as_pricelist_id': as_pricelist_id }"/>
			</xpath>			
			<xpath expr="//notebook//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_total']" position="after">
				<button name="pricelist_apply" type="object" attrs="{'invisible': [('as_product_comisionable', '!=', False)]}" string="Precios" icon="fa-cart-plus"/>
			</xpath>

			<xpath expr="//tree//field[@name='product_uom_qty']" position="after">
				<field name="margin2" optional="show" string="Margen (%)"/>
				<field name="as_pricelist_id" optional="show" string="Lista Precio"/>
			</xpath>
			<xpath expr="//notebook//page[@name='order_lines']/field[@name='order_line']/tree" position="inside">
				<field name="RECALCULATED_PRICE_UNIT" optional="hide"/>
				<field name="NIMAX_PRICE_MXP" optional="hide"/>
				<field name="COST_NIMAX_USD" optional="hide"/>
				<field name="COST_NIMAX_MXP" optional="hide"/>
				<field name="MARGIN_MXP" optional="hide"/>
				<field name="MARGIN_USD" optional="hide"/>
				<field name="TOTAL_USD" optional="hide"/>
				<field name="TOTAL_MXP" optional="hide"/>
				<field name="RECALCULATED_COST_NIMAX_USD" optional="hide"/>
				<field name="as_margin_porcentaje" optional="hide"/>
			</xpath>
			<field name="payment_term_id" position="after">
				<field name="last_promo_id" invisible="1"/>
				<field name="currency_aux_id"/>
				<field name="as_margin"/>
				<field name="as_aprobe" invisible="True"/>
			</field>
			<xpath expr="//field[@name='pricelist_id']" position="attributes">
				  <attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//field[@name='partner_shipping_id']" position="after">
				<field name="as_zebra_sale" />
				<field name="as_usuario_final" attrs="{'invisible': [('as_zebra_sale', '=', False)]}"/>
			</xpath>
		</field>
	</record>
	
</odoo>