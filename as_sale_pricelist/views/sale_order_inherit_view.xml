<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Sale Order form view -->
	<record id="view_order_form_inherit_view" model="ir.ui.view">
		<field name="name">view.order.form.inherit.view</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form"/>
		<field name="priority">55</field>
		<field name="arch" type="xml">
			<xpath expr="//notebook//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_total']" position="after">
				<button name="promo_apply" type="object" string="Promo" icon="fa-percent" context="{'as_pricelist_id': as_pricelist_id }"/>

			</xpath>			
			<xpath expr="//notebook//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_total']" position="after">
				<button name="pricelist_apply" type="object" string="Precios" icon="fa-cart-plus"/>
			</xpath>
			<xpath expr="//notebook//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='price_total']" position="after">
				<button name="product_promo_apply_dis_value" type="object" string="Promo_new" icon="fa-percent" context="{'as_pricelist_id': as_pricelist_id }"/>
				<button name="prduct_promo_apply_dis_per" type="object" string="Promo_product" icon="fa-percent" context="{'as_pricelist_id': as_pricelist_id }"/>
			</xpath>
			<xpath expr="//tree//field[@name='product_uom_qty']" position="after">
				<field name="margin2" optional="show" string="Margen"/>
				<field name="as_pricelist_id" optional="show" string="Lista Precio"/>
			</xpath>
		</field>
	</record>
	
</odoo>