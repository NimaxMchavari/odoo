<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="as_reporte_invoice_mx" model="report.paperformat">
                <field name="name">Factura Localizacion Mexicana</field>
                <field name="default" eval="True" />
                <field name="format">Letter</field>
                <field name="page_height">0</field>
                <field name="page_width">0</field>
                <field name="orientation">Portrait</field>
                <field name="margin_top">60</field>
                <field name="margin_bottom">60</field>
                <field name="margin_left">10</field>
                <field name="margin_right">10</field>
                <field name="header_line" eval="False" />
                <field name="header_spacing">58</field>
                <field name="dpi">90</field>
        </record>
        <record id="account.account_invoices_without_payment" model="ir.actions.report">
                <field name="paperformat_id" ref="as_sale_pricelist.as_reporte_invoice_mx" />
        </record>
        <record id="account.account_invoices" model="ir.actions.report">
                <field name="paperformat_id" ref="as_sale_pricelist.as_reporte_invoice_mx" />
        </record>

</odoo>